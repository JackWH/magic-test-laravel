{
    "name": "mateusjatenee/magic-test-laravel",
    "description": "Use Magic Test with Laravel",
    "keywords": [
        "mateusjatenee",
        "magic-test-laravel"
    ],
    "homepage": "https://github.com/mateusjatenee/magic-test-laravel",
    "license": "MIT",
    "authors": [
        {
            "name": "Mateus Guimar√£es",
            "email": "mateus.jatene@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "spatie/laravel-package-tools": "^1.1",
        "illuminate/contracts": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.3",
        "spatie/laravel-ray": "^1.9",
        "vimeo/psalm": "^4.4"
    },
    "autoload": {
        "psr-4": {
            "Mateusjatenee\\MagicTest\\": "src",
            "Mateusjatenee\\MagicTest\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mateusjatenee\\MagicTest\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mateusjatenee\\MagicTest\\MagicTestServiceProvider"
            ],
            "aliases": {
                "MagicTest": "Mateusjatenee\\MagicTest\\MagicTestFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
